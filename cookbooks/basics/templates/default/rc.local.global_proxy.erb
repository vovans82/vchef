#!/bin/sh
#
# Generated by Chef for <%= node[:fqdn] %>
# Local modifications will be overwritten.
export LANG=en_US.UTF-8
touch /var/lock/subsys/local
sed -i -r 's/HOSTNAME.*/HOSTNAME=<%= node[:fqdn] %>/g' /etc/sysconfig/network
hostname <%= node[:fqdn] %>

route add -net 192.168.99.0/24 gw <%= node[:private_gw] %>
route add -net 192.168.100.0/24 gw <%= node[:private_gw] %> 

service ntpd stop
ntpdate -b 184.106.81.83
service ntpd start
